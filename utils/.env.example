# AI Behar Platform Environment Configuration - EXAMPLE FILE
# Core Platform Settings
PLATFORM_NAME=AI_Behar_Platform
PLATFORM_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
# Common hosts and paths to reduce duplication
LOCALHOST=localhost
RUNTIME_DB_DIR=databases/runtime
PLATFORM_DB_FILE=platform.db

# Database Configuration
DATABASE_URL=sqlite:///${RUNTIME_DB_DIR}/${PLATFORM_DB_FILE}
SEMANTIC_MEMORY_DB=${RUNTIME_DB_DIR}/semantic_memory.db
TRADING_DATA_DB=${RUNTIME_DB_DIR}/trading_data.db
USER_DATA_DB=${RUNTIME_DB_DIR}/user_data.db
# For PostgreSQL (uncomment when needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/dimensional_ai

# API Configuration
API_HOST=${LOCALHOST}
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Web UI Configuration
WEB_UI_HOST=${LOCALHOST}
WEB_UI_PORT=3000
WEB_UI_RELOAD=true
FRONTEND_URL=http://${LOCALHOST}:${WEB_UI_PORT}
CORS_ORIGINS=http://${LOCALHOST}:${WEB_UI_PORT},http://${LOCALHOST}:8080
# When deploying remotely, set OPENWEBUI_BASE_URL to the public URL of your OpenWebUI instance
# Example: https://chat.example.com or your ngrok/Cloudflare tunnel URL
OPENWEBUI_BASE_URL=http://localhost:8080

# Trading Configuration
TRADING_ENABLED=true
TRADING_MODE=simulation
TRADING_RISK_LEVEL=moderate
MAX_RISK_PER_TRADE=0.02
MAX_PORTFOLIO_RISK=0.1
DAILY_LOSS_LIMIT=0.05

# Exchange API Keys (Trading)
BITGET_API_KEY=your_bitget_api_key_here
BITGET_SECRET_KEY=your_bitget_secret_key_here
BITGET_PASSPHRASE=your_bitget_passphrase_here
BITGET_SANDBOX=true

# Binance (if using)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# LLM Integration
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# OpenAI (if using)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Anthropic (if using)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet

# Security Configuration
SECRET_KEY=dimensional-ai-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-characters-long
DATA_ENCRYPTION_ENABLED=true

# Consciousness System
CONSCIOUSNESS_ENABLED=true
DEFAULT_AWARENESS_LEVEL=0.7
EMOTIONAL_SENSITIVITY=0.8
LEARNING_RATE=0.1
MEMORY_CONSOLIDATION_INTERVAL=300

# Health Monitoring
HEALTH_CHECK_INTERVAL=30
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=95
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=95
EMOTIONAL_DRIFT_THRESHOLD=0.3

# Cache Configuration
REDIS_HOST=${LOCALHOST}
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Voice System
VOICE_ENABLED=true
VOICE_LANGUAGE=en-US
VOICE_ENGINE=pyttsx3
EMOTIONAL_VOICE_SYNTHESIS=true

# Multi-Agent System
MAX_AGENTS=50
AGENT_COLLABORATION_ENABLED=true
AGENT_LEARNING_ENABLED=true

# Development Settings
HOT_RELOAD=true
AUTO_RESTART=true
PROFILING_ENABLED=false
TESTING_MODE=false

# Production Settings (set when deploying)
PRODUCTION_MODE=false
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# External Services
WEBHOOK_URL=
NOTIFICATION_EMAIL=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Cloud Storage (if using)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Monitoring & Analytics
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
ELASTICSEARCH_URL=
KIBANA_URL=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=backups
BACKUP_LOCATION=${BACKUP_DIR}/

# Plugin System
PLUGINS_ENABLED=true
PLUGIN_MARKETPLACE_URL=
PLUGIN_DEVELOPMENT_MODE=true
